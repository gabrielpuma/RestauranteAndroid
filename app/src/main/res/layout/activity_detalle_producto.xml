<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detalle.DetalleProducto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detalleRecycler"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detalleTitle"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detallePrice"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detalleDescription"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/detalleChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chat"/>
            <Button
                android:id="@+id/detalleVolver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volver"/>
        </LinearLayout>
        
    </ScrollView>
    

</androidx.constraintlayout.widget.ConstraintLayout>